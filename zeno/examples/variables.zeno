// Example: Variables and Types
let message = "This is a string"
println(message)

let count = 100 // Type inferred as int
println(count)

mut current_temp: float = 15.5
println(current_temp)
current_temp = current_temp + 5.0
println(current_temp)

let is_active: bool = true
if is_active {
    println("System is active")
}

let uninit_message: string = "default" // Must be initialized
println(uninit_message)

// Re-assignment
mut value = 10
println(value)
value = 20
println(value)
