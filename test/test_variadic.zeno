// Test file for variadic function arguments
import { println, print } from "std/fmt"

fn main() {
    let name: string = "Alice"
    let age: int = 25
    let pi: float = 3.14159
    let active: bool = true
    
    // Test variadic println with multiple arguments
    println("User info:", name, "Age:", age, "Pi:", pi, "Active:", active)
    
    // Test variadic print with different types
    print("Name: ", name, " | Age: ", age)
    println("")
    
    // Test with single argument
    println("Single argument")
    
    // Test with no arguments
    println()
    
    // Test with mixed types
    print("Mixed: ", 42, " + ", 3.14, " = ", true)
    println("")
}
