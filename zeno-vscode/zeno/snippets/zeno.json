{
    "Main function": {
        "prefix": "main",
        "body": [
            "import { println } from "std/fmt"",
            "",
            "fn main() {",
            "	println("Hello, Zeno!")",
            "	$0",
            "}"
        ],
        "description": "Creates a main function with std/fmt import"
    },
    "Function definition": {
        "prefix": "fn",
        "body": [
            "fn ${1:functionName}(${2:params}) {",
            "	$0",
            "}"
        ],
        "description": "Defines a function"
    },
    "Public function definition": {
        "prefix": "pubfn",
        "body": [
            "pub fn ${1:functionName}(${2:params}) {",
            "	$0",
            "}"
        ],
        "description": "Defines a public function"
    },
    "Import from module": {
        "prefix": "import",
        "body": [
            "import { $1 } from "${2:modulePath}""
        ],
        "description": "Imports symbols from a module"
    },
    "Let declaration": {
        "prefix": "let",
        "body": [
            "let ${1:variableName} = $0"
        ],
        "description": "Declares a variable"
    },
    "If statement": {
        "prefix": "if",
        "body": [
            "if ${1:condition} {",
            "	$0",
            "}"
        ],
        "description": "Creates an if statement"
    },
    "If/Else statement": {
        "prefix": "ifelse",
        "body": [
            "if ${1:condition} {",
            "	$2",
            "} else {",
            "	$0",
            "}"
        ],
        "description": "Creates an if/else statement"
    }
}
